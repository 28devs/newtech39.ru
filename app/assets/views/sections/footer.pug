      a.footer__tel(href='tel:88005555555') 8-800-555-55-55
      p или
      a.btn(href='#!') Задать вопрос

  nav.footer__nav
    .container
      .row.footer__nav-items
        each nav, index in navsFooter
          .col-6.col-md-3
            h4.footer__nav-item
              a(href='#' + index class=index === 0 ? 'active' : '')= nav.title

      .row
        each nav, index in navsFooter
          .col-12.col-md-3
            .row.footer__nav-childs(class=index === 0 ? 'active' : '' data-footer-nav-child=index)
              each child in nav.childs
                .col-6.col-md-12
                  a.nav-link(href=child.url)= child.title

  .footer__address 
    .container
      .row
        each address in footerAddress
          .col-6.col-md-3
            h5!= address.title
            p= address.phone
            p= address.address
        
        .col-6.col-md-3
          a.footer__logo(href='#!')

  .footer__copy
    .container
      .row
        .col-6.col-md-3.d-flex.align-items-center.order-3.order-md-1
          p © 2018, nextech39.ru
          
        .col-6.col-md-3.d-flex.align-items-center.order-4.order-md-2
          .social.d-flex
            a.social__link.social__in(href='#!')
