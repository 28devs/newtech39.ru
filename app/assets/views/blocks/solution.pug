section.solution
  .container
    h2.text-center Эффективные решения
    .row
      each val in solution 
          .col-3.solution__item.text-center
            img(src='img/' + val.href)
            div.solution__text
              p.solution__title
                a.link(href='#').link--arrow.link--blacked !{val.title}
              p.solution__desc !{val.desc}

      .solution__btn.col-12
        a(href='#').btn Смотреть все решения