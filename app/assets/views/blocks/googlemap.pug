script(defer).
  function initMap() {
    var myLatLng = {lat: 54.70754071, lng: 20.61628317};
    var map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: 54.70678215, lng: 20.60849538},
      zoom: 16 
    });
    
   
    var contentString = '<div id="content">'+
      '<h5 id="firstHeading" class="firstHeading">Клиника на Московском проспекте</h5>'+
      '<div id="bodyContent">'+
      '<ul class="list list--secondary-color">'+
      '<li>г. Калининград, Московский проспект, 375</li>'+
      '</ul>'+
      '</div>'+
      '</div>';

    var infowindow = new google.maps.InfoWindow({
      content: contentString,
      pixelOffset: new google.maps.Size(-240,85)
    });

    var marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      title: 'Hello World!',
      icon: 'img/map-icon.png'
    });

    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });


    google.maps.event.addListener(infowindow, 'domready', function () {
      var iwOuter = $('.gm-style-iw');

      var iwBackground = iwOuter.prev()
      iwBackground.addClass('infoContainer')
      iwBackground.children(':nth-child(2)').addClass('infoOutter')
      iwBackground.children(':nth-child(3)').addClass('infoAfter')
      iwBackground.children(':nth-child(1)').css({'display' : 'none'});
    });


  }